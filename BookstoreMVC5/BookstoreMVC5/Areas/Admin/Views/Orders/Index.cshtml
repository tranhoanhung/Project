@model IEnumerable<BookstoreMVC5.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@Html.Partial("~/Areas/Admin/Views/Shared/_topMenu.cshtml")
@Html.Partial("~/Areas/Admin/Views/Shared/_leftMenu.cshtml")

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row m-0">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Quản Lý Đơn hàng</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Quản đơn hàng</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->



    <section class="container-fluid ">
        <div class=" bg-white card  ">
            <div class="row justify-content-end">
                <div class="col-md-3">
                    <div class=" pt-1 ml-5">

                        <a class="text-white btn-sm btn-danger " href="~/admin/Orders/trash">Thùng rác<i class="fas fa-trash"></i></a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-9  w-100 ">
                    @Html.Partial("_MessgeAlert")
                </div>
                <div class="col-md-12 p-3">

                    <table id="myTable1" class="table  table-striped table-bordered dt-responsive nowrap">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên khách hàng</th>
                                <th>Ngày Tạo</th>
                                <th>Trạng thái</th>
                                <th>Chi tiết</th>
                                <th>Hình thức thanh toán</th>
                                <th>Chức Năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                String dh1 = "Đã xác nhận";
                                String dh2 = "chờ xác nhận";
                                <tr>

                                    <td><a class="card-link " href="@Url.Action("Detail", "Orders", new { id = item.ID })"> @Html.DisplayFor(modelItem => item.ID)</a></td>
                                    <td class="font-weight-bold"> @Html.DisplayFor(modelItem => item.deliveryname)</td>
                                    <td width="10%" style="font-size:14px;">@Html.DisplayFor(modelItem => item.date_created) </td>
                                    <td>
                                        @if (item.status == 1)
                                        {
                                            <p class="text-success"> @dh1</p>
                                        }
                                        else
                                        { <p class="text-danger"> @dh2</p>}
                                    </td>

                                    <td><a href="@Url.Action("Detail", "Orders", new { id = item.ID })">Xem Chi tiết</a></td>
                                    <td>
                                        @item.deliveryPaymentMethod
                                    </td>
                                    <td>
                                        @if (item.status == 1)
                                        {
                                            <a class="btn btn-sm btn-light text-success border a33" href="@Url.Action("Status", "Orders", new { id = item.ID })"> <i class="fas fa-toggle-on"></i> </a>
                                        }
                                        else
                                        {
                                            <a class="btn btn-sm btn-light text-danger border a33" href="@Url.Action("Status", "Orders", new { id = item.ID })"> <i class="fas fa-toggle-off"></i> </a>
                                        }

                                        <a class="btn btn-sm btn-light text-danger border" href="@Url.Action("Deltrash", "Orders", new { id = item.ID })"> <i class="fas fa-trash-alt"></i></a>

                                        <a class="btn btn-sm btn-light text-orange border" href="@Url.Action("Deltrash", "Orders", new { id = item.ID })"> <i class="fas fa-ban "></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </section>
    <script>
        $("#order").addClass("active");
    </script>
