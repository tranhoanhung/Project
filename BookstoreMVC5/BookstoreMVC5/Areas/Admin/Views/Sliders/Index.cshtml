@model IEnumerable<BookstoreMVC5.Models.Slider>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@Html.Partial("~/Areas/Admin/Views/Shared/_topMenu.cshtml")
@Html.Partial("~/Areas/Admin/Views/Shared/_leftMenu.cshtml")
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row m-0">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Quản Lý Ảnh Bìa</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Quản Lý Sản Phẩm</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->



    <section class="container-fluid ">
        <div class=" bg-white card  ">
            <div class="row justify-content-end">
                <div class="col-md-6 ">
                    <div class=" pt-1 ml-5 float-right mr-3">
                        <a class="text-white btn-sm btn-success" href="~/admin/sliders/Create">Add slider <i class="fas fa-plus"></i></a>
                        <a class="text-white btn-sm btn-danger " href="~/admin/sliders/trash">Thùng rác<i class="fas fa-trash"></i></a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-9  w-100 ">
                    @*@Html.Partial("_MessgeAlert")*@
                </div>
                <div class="col-md-12 p-3">

                    <table id="myTable1" class="table px-3 table-striped table-bordered dt-responsive nowrap">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Hình</th>
                                <th >Tên slider</th>
                                <th>Vị trí</th>
                                <th>Ngày Tạo</th>
                                <th>Chức Năng</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td class="text-cam ">@Html.DisplayFor(modelItem => item.ID)</td>
                                <td><img width="250px" src="~/public/images/bg-images/@Html.DisplayFor(modelItem => item.img)"></td>
                                <td> @Html.DisplayFor(modelItem => item.name)</td>
                                <td style="font-size:14px;">@Html.DisplayFor(modelItem => item.sort)</td>
                                <td style="font-size:14px;">@Html.DisplayFor(modelItem => item.date_created)</td>
                                <td>
                                    @if (item.status == 1)
                                    {
                                        <a class="btn btn-sm btn-light text-success border a33" href="@Url.Action("Status", "Sliders", new { id = item.ID })"> <i class="fas fa-toggle-on"></i> </a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-sm btn-light text-danger border a33" href="@Url.Action("Status", "Sliders", new { id = item.ID })"> <i class="fas fa-toggle-off"></i> </a>
                                    }


                                    <a class="btn btn-sm btn-light text-danger border" href="@Url.Action("Deltrash", "Sliders", new { id = item.ID })"> <i class="far fa-trash-alt"></i></a>
                                    <a class="btn btn-sm btn-light text-warning border" href="@Url.Action("Edit", "Sliders", new { id = item.ID })">
                                        <i class="far fa-edit"></i>
                                    </a>
                                </td>

                            </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </section>
    <script>
        $("#slider").addClass("active");
    </script>


