@model BookstoreMVC5.Models.User
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layoutSite.cshtml";
}

<section class="breadcrumb-section bg-white">
    <h2 class="sr-only">Site Breadcrumb </h2>
    <div class="container">
        <div class="breadcrumb-contents">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="~/">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Thông tin tài khoản</li>
                </ol>
            </nav>
        </div>
    </div>
</section>
<div class="page-section inner-page-sec-padding">
    <div class="container bg-white p-3">
        <div class="row">
            <div class="col-sm-12  ">
                @Html.Partial("_MessgeAlertc")
            </div>
            <div class="col-12">
                <div class="row">
                    <!-- My Account Tab Menu Start -->
                    <div class="col-lg-3 col-12">
                        <div class="myaccount-tab-menu nav" role="tablist">
                            <a href="#dashboad" class="active" data-toggle="tab">
                                <i class="fas fa-tachometer-alt"></i>
                                Thông tin tài khoản
                            </a>
                            <a href="#orders" data-toggle="tab"><i class="fa fa-cart-arrow-down"></i> Đơn hàng</a>

                            <a href="#payment-method" data-toggle="tab">
                                <i class="fa fa-credit-card"></i>
                                Phương thức thanh toán
                            </a>
                            @*<a href="#address-edit" data-toggle="tab">
                                    <i class="fa fa-map-marker"></i>
                                    Địa chỉ
                                </a>*@
                            @*<a href="#account-info" data-toggle="tab">
                                    <i class="fa fa-user"></i> Thay đổi mật khẩu
                                </a>*@
                            <a href="~/Custommer/logout"><i class="fas fa-sign-out-alt"></i> Đăng xuất</a>
                        </div>
                    </div>
                    <!-- My Account Tab Menu End -->
                    <!-- My Account Tab Content Start -->
                    <div class="col-lg-9 col-12 mt--30 mt-lg--0">
                        <div class="tab-content" id="myaccountContent">
                            <!-- Single Tab Content Start -->
                            <div class="tab-pane fade show active" id="dashboad" role="tabpanel">
                                <div class="myaccount-content">
                                    <h3>Tài khoản của bạn</h3>
                                    <div class="welcome mb-20">
                                        <p>
                                            Hello, <strong class="text-danger font-weight-bold">
                                                <strong class="text-danger font-weight-bold" id="1_fullname">@Model.fullname </strong>
                                            </strong>
                                        </p>
                                    </div>
                                    <p>Mobile: (+84) @Model.phone</p>
                                    <p>Địa chỉ: @Model.address</p>
                                    <p>Email: @Model.email</p>
                                    <a href="tai-khoan/@Model.ID" class="btn btn--primary">
                                        <i class="fa fa-edit"></i>Sửa thông tin
                                    </a>
                                    <a href="doi-mat-khau/@Model.ID" class="btn btn--primary">
                                        <i class="fa fa-edit"></i>Đổi mật khẩu
                                    </a>
                                </div>
                            </div>
                            <!-- Single Tab Content End -->
                            <!-- Single Tab Content Start -->
                            <div class="tab-pane fade" id="orders" role="tabpanel">
                                <div class="myaccount-content">
                                    <h3>Đơn hàng</h3>
                                    <div class="myaccount-table table-responsive text-center">
                                        <table class="table table-bordered">
                                            <thead class="thead-light">
                                                <tr>
                                                    <th>Mã đơn hàng</th>
                                                    <th>Tên KH</th>
                                                    <th>Điện thoại</th>
                                                    <th>Trạng thái</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in ViewBag.listOrder)
                                                {
                                                    <tr>
                                                        <td>@item.ID</td>
                                                        <td>@item.deliveryname</td>
                                                        <td>@item.deliveryphone</td>
                                                        @if (@item.status == 2)
                                                        {
                                                            <td>Đang giao hàng</td>
                                                        }
                                                        else
                                                        {
                                                            <td>Chờ xác nhận</td>
                                                        }
                                                        
                                                        <td><a href="#" class="btn">View</a></td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <!-- Single Tab Content End -->
                            <!-- Single Tab Content Start -->
                            <div class="tab-pane fade" id="payment-method" role="tabpanel">
                                <div class="myaccount-content">
                                    <h3>Phương thức thanh toán</h3>
                                    <p class="saved-message">Cod Thanh toán khi nhận hàng</p>
                                </div>
                            </div>
                            <!-- Single Tab Content End -->
                            <!-- Single Tab Content Start -->
                            <div class="tab-pane fade" id="address-edit" role="tabpanel">
                                <div class="myaccount-content">
                                    <h3>Địa chỉ đơn hàng</h3>
                                    <address>
                                        <p><strong>@Model.fullname</strong></p>
                                        <p>
                                            @Model.address
                                        </p>
                                        <p>Mobile: (+84) @Model.phone</p>
                                    </address>
                                    <a href="#" class="btn btn--primary">
                                        <i class="fa fa-edit"></i>Sửa địa chỉ
                                    </a>
                                </div>
                            </div>
                            <!-- Single Tab Content End -->
                            <!-- Single Tab Content Start -->
                            <!-- Single Tab Content End -->
                        </div>
                    </div>
                    <!-- My Account Tab Content End -->
                </div>
            </div>
        </div>
    </div>
</div>
