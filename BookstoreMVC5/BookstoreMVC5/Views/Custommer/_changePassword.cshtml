@model BookstoreMVC5.Models.User
@{
    ViewBag.Title = "_changePassword";
    Layout = "~/Views/Shared/_layoutSite.cshtml";
}
<section class="breadcrumb-section bg-white">
    <h2 class="sr-only">Site Breadcrumb </h2>
    <div class="container">
        <div class="breadcrumb-contents">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="~/">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Thông tin tài khoản</li>
                </ol>
            </nav>
        </div>
    </div>
</section>
<div class="page-section inner-page-sec-padding">
    <div class="container bg-white p-3">
        <div class="row">
            <div class="col-sm-12  ">
                @Html.Partial("_MessgeAlertc")
            </div>
            <div class="col-12">
                <div class="row">
                    <!-- My Account Tab Menu Start -->
                    <div class="col-lg-3 col-12">
                        <div class="myaccount-tab-menu nav" role="tablist">
                            <a href="#dashboad" class="active" data-toggle="tab">
                                <i class="fas fa-tachometer-alt"></i>
                                Đổi mật khẩu
                            </a>
                            <a href="~/thong-tin-kh"><i class="fas fa-sign-out-alt"></i> Hủy</a>
                        </div>
                    </div>
                    <div class="col-lg-9 col-12 mt--30 mt-lg--0">
                        <div class="tab-content" id="myaccountContent">

                            <div class="tab-pane fade show active" id="dashboad" role="tabpanel">
                                <div class="myaccount-content">
                                    <h3>Thay đổi đổi mật khẩu</h3>
                                    <div class="welcome mb-20">
                                        <div class="account-details-form">

                                            @using (Html.BeginForm("ChangePassWord", "Custommer", FormMethod.Post))
                                            {
                                                @Html.AntiForgeryToken()
                                                @Html.HiddenFor(model => model.ID)
                                                @Html.HiddenFor(model => model.img)
                                                @Html.HiddenFor(model => model.gender)
                                                @Html.HiddenFor(model => model.status)
                                                @Html.HiddenFor(model => model.fullname)
                                                @Html.HiddenFor(model => model.username)
                                                @Html.HiddenFor(model => model.email)
                                                @Html.HiddenFor(model => model.phone)
                                                <div class="login-form">
                                                    <div class="row">
                                                        <div class="col-12  mb--30">
                                                                <span class="text-danger" id="error"></span>
                                                            <span class="text-danger">@ViewBag.status</span>
                                                            </div>
                                                        <div class="col-12  mb--30">
                                                            <label for="password">Mật khẩu cũ</label>
                                                            <input id="current-pwd" placeholder="Mật khẩu cũ" name="passOld"
                                                                   type="password">
                                                        </div>
                                                        <div class="col-lg-6 mb--20">
                                                            <label for="password">Mật khẩu</label>
                                                            <input class="mb-0 form-control" type="password" name="password1" id="password" placeholder="Nhập mật khẩu" required>
                                                        </div>
                                                        <div class="col-lg-6 mb--20">
                                                            <label for="password">Nhập lại mật khẩu</label>
                                                            <input class="mb-0 form-control" type="password" id="repeat-password" name="rePass" placeholder="Nhập lại mật khẩu" required>

                                                        </div>
                                                        <div class="col-md-12">
                                                            <button type="submit" class="btn btn-outlined">Cập nhật</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <!-- Single Tab Content Start -->
                        <!-- Single Tab Content End -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

