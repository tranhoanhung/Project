@model List<BookstoreMVC5.Models.Favorite>
@{
    ViewBag.Title = "favoriteList";
    Layout = "~/Views/Shared/_layoutSite.cshtml";
}

<section class="breadcrumb-section bg-white">
    <h2 class="sr-only">Site Breadcrumb</h2>
    <div class="container">
        <div class="breadcrumb-contents">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="~/">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Sản phẩm yêu thích</li>
                </ol>
            </nav>
        </div>
    </div>
</section>
<!-- Wishlist Page Start -->
<div class="cart_area inner-page-sec-padding-bottom">
    <div class="container bg-white p-3">
        <div class="row">
            <div class="col-12">
                @Html.Partial("_MessgeAlertc")
                <form action="./">
                    <!-- Cart Table -->
                    <div class="cart-table table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="pro-thumbnail">Ảnh</th>
                                    <th class="pro-title">tên sảnn phẩm</th>
                                    <th class="pro-price">Giá</th>
                                    <th class="pro-quantity">Giá Khuyến mãi</th>
                                    <th class="pro-remove">Xóa</th>
                                </tr>
                            </thead>
                            <tbody>


                                @if (Model.Count() == 0)
                                {
                                    <spam class="text-danger">
                                        Chưa có sản phẩm yêu thích nào
                                    </spam>
                                }
                                @foreach (var iten in Model)
                                {
                                    int sale = (int)iten.Book.pricesale;
                                    float price = (int)iten.Book.price - (int)iten.Book.price / 100 * (int)sale;
                                    <tr>
                                        <td class="pro-thumbnail">
                                            <a href="#">
                                                <img src="~/Public/images/product/@iten.Book.img" alt="Product">
                                            </a>
                                        </td>
                                        <td class="pro-title"><a href="~/san-pham/@iten.Book.slug">@iten.Book.name</a></td>

                                        <td class="pro-price"><span>@iten.Book.price.ToString("N0") VND</span></td>
                                        <td class="pro-price"><span>@price.ToString("N0") VND</span></td>
                                        <td class="pro-remove"><a href="#"><i class="far fa-trash-alt"></i></a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Cart Page End -->
