@model List<BookstoreMVC5.Models.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layoutSite.cshtml";
}
<section class="breadcrumb-section">
    <h2 class="sr-only">Site Breadcrumb</h2>
    <div class="container">
        <div class="breadcrumb-contents">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="~/">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Giỏ hàng</li>
                </ol>
            </nav>
        </div>
    </div>
</section>
<!-- Cart Page Start -->
<main class="cart-page-main-block inner-page-sec-padding-bottom">
    <div class="cart_area cart-area-padding  ">
        <div class="container">
            <div class="page-section-title">
                <h1>Giỏ hàng</h1>
            </div>
            <div class="row">
                <div class="col-12">
                    <form action="#" class="">
                        <!-- Cart Table -->
                        <div class="cart-table table-responsive mb--40">
                            <table class="table">
                                <!-- Head Row -->
                                <thead>
                                    <tr>
                                        <th class="pro-thumbnail">Ảnh</th>
                                        <th class="pro-title">Tên sản phẩm</th>
                                        <th class="pro-price">giá</th>
                                        <th class="pro-quantity">Số lượng</th>
                                        <th class="pro-remove">option</th>
                                        <th class="pro-subtotal">Tổng tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <spam class="text-danger"> @ViewBag.statusCart</spam>
                                    <!-- Product Row -->

                                    @{ float sum = 0;
                                    }
                                    @foreach (var iten in Model)
                                    {
                                        int sale = (int)iten.book.pricesale;
                                        float price = ((int)iten.book.price - (int)iten.book.price / 100 * (int)sale);
                                        float price1 = ((int)iten.book.price - (int)iten.book.price / 100 * (int)sale) * (iten.quantity);
                                        float priveNsale = (int)iten.book.price * iten.quantity;
                                        if (sale > 0)
                                        {
                                            sum += ((int)iten.book.price - (int)iten.book.price / 100 * (int)sale) * ((int)iten.quantity);
                                        }
                                        else
                                        {
                                            sum += (int)iten.book.price * (int)iten.quantity;
                                        }
                                        <form action="@Url.Action("updateitem")" method="get">
                                            <tr id="cartItem_@iten.book.ID">
                                                <td class="pro-thumbnail">
                                                    <a href="#">
                                                        <img src="~/Public/images/product/@iten.book.img" alt="Product">
                                                    </a>
                                                </td>
                                                <td class="pro-title"><a href="#">@iten.book.name</a></td>
                                                <td class="pro-price">
                                                    <del class="price-old">@iten.book.price.ToString("N0") VND</del>
                                                    <span>@price.ToString("N0") VND </span>
                                                </td>
                                                <td class="pro-quantity">
                                                    <div class="pro-qty">
                                                        <div class="count-input-block">
                                                            <input type="number" min="1" step="1" class="txtQuantity" data-id="@iten.book.ID" value="@iten.quantity" />
                                                        </div>

                                                        <!--<div class="count-input-block">
                                                            <input type="number"--> @*class="form-control text-center"*@ <!--class="txtQuantity"--> @*id="txtQuantity"*@ <!--data-id="@iten.book.ID" value="@iten.quantity">
                                                            <div class="count-input-btns">
                                                                <button class="inc-ammount count-btn">
                                                                    <i class="zmdi zmdi-chevron-up"></i>
                                                                </button>
                                                                <button class="dec-ammount count-btn">
                                                                    <i class="zmdi zmdi-chevron-down"></i>
                                                                </button>
                                                            </div>
                                                        </div>-->
                                                    </div>
                                                    
                                                </td>
                                                <td class="pro-remove">
                                                    @*<a href="javascript:void(0);" onclick="deleteitem(@iten.book.ID)"><i class="far fa-trash-alt"></i></a>*@
                                                    <button id="btnUpdate" type="submit">
                                                        <i class="fas fa-retweet"></i>
                                                    </button>
                                                    <br />
                                                    <a href="javascript:void(0);" onclick="deleteitem(@iten.book.ID)"><i class="far fa-trash-alt"></i></a>
                                                    
                                                </td>

                                                <td class="pro-subtotal"><span>@price1.ToString("N0") VND</span></td>
                                            </tr>
                                            </form>
                                            }



                                            <!-- Discount Row  -->
                                            @*<tr>
                    <td colspan="6" class="actions">
                        <div class="coupon-block">
                            <div class="coupon-text">
                                <label for="coupon_code">Coupon:</label>
                                <input type="text" name="coupon_code" class="input-text"
                                       id="coupon_code" value="" placeholder="Mã khuyến mãi">
                            </div>
                            <div class="coupon-btn">
                                <input type="submit" class="btn btn-outlined"
                                       name="apply_coupon" value="Áp dụng">
                            </div>
                        </div>
                        <div class="update-block text-right">
                            <input type="submit" class="btn btn-outlined" name="update_cart"
                                   value="Cập nhật giỏ hàng">
